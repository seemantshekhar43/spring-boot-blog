{
  "index": {
    "number_of_shards": "5",
    "refresh_interval": "10s",
    "analysis": {
      "analyzer": {
        "post_index_analyzer": {
          "type": "custom",
          "char_filter": "openkoreantext-normalizer",
          "tokenizer": "openkoreantext-tokenizer",
          "filter": [
            "openkoreantext-stemmer",
            "openkoreantext-redundant-filter",
            "index_synonym",
            "stop",
            "length",
            "lowercase",
            "asciifolding",
            "porter_stem"
          ]
        }
      }
    },
    "filter": {
      "index_synonym": {
        "type": "synonym",
        "synonyms": [
          "스프링 => spring",
          "스프링 부트, 스프링부트=> spring boot",
          "네티 => netty",
          "스레드 => thread",
          "자바 => java",
          "오토컨피그, 오토컨피그레이션 => AutoConfiguration",
          "웹 => web",
          "어노테이션, 애노테이션 => Annotation",
          "빈 => Bean",
          "비동기 => Async",
          "바이트코드 => bytecode"
        ]
      }
    }
  }
}